@model IEnumerable<Geek.Web.Domain.Model.ProdutoModel>

<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            @*<h1 class="text-primary">Produto</h1>*@
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-info">
                <i class="fas fa-plus"></i> Novo
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.NomeCategoria</td>
                    <td>@((item.Preco).ToString("c"))</td>
                    <td>
                        <a asp-action="Update" class="btn btn-success" asp-route-id="@item.IdProduto">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProduto">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>